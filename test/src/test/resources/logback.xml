<configuration>

    <appender name="DEBUG_LOG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%-5level] %thread{0} [%logger] --- %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO" additivity="false">
        <appender-ref ref="DEBUG_LOG"/>
    </root>

</configuration>
